<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/itemSummary">
    <TextView
        android:id="@+id/topicName"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:text="Father"
        android:textColor="#F02"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/yourAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtWordValue"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:text="Câu trả lời của bạn là : Mẹ"
        android:textColor="#3A3535"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/correctAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtWordValue"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:text="Câu trả lời đúng là: Bố"
        android:textColor="#3A3535"
        android:textSize="15dp"/>


</LinearLayout>